<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/cover_bg"

            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="0.495"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:id="@+id/image_delete1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/delete_circle"
                    android:padding="4dp"
                    />
            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight=".01"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="0.495"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

                <ImageView
                    android:id="@+id/image_delete2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/delete_circle"
                    android:padding="4dp"
                    android:visibility="gone"

                    />
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:weightSum="1"
        >
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            >

            <ImageView
                android:id="@+id/image_update1"
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                android:src="@drawable/edit" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            >
            <ImageView
                android:id="@+id/image_update2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/edit"
                android:visibility="invisible"
                android:padding="3dp"
                />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>