<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"

    >

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal"


        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >
        <FrameLayout
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            >
            <net.karthikraj.shapesimage.ShapesImage
                android:id="@+id/shape1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorPrimary"
                android:scaleType="matrix"
                />
            <ImageView
                android:id="@+id/shape1_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/gallery"
                />
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/f2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"

            >
            <net.karthikraj.shapesimage.ShapesImage
                android:id="@+id/shape2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorPrimary"
                android:scaleType="matrix"
                />
            <ImageView
                android:id="@+id/shape2_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/gallery"
                android:padding="10dp"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/f3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"

            >
            <net.karthikraj.shapesimage.ShapesImage
                android:id="@+id/shape3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorPrimary"
                android:scaleType="matrix"
                />
            <ImageView
                android:id="@+id/shape3_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/gallery"
                android:padding="10dp"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/f4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"

            >
            <net.karthikraj.shapesimage.ShapesImage
                android:id="@+id/shape4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorPrimary"
                android:scaleType="matrix"
                />
            <ImageView
                android:id="@+id/shape4_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/gallery"
                android:padding="10dp"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/f5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"

            >
            <net.karthikraj.shapesimage.ShapesImage
                android:id="@+id/shape5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorPrimary"
                android:scaleType="matrix"
                />
            <ImageView
                android:id="@+id/shape5_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/gallery"
                android:padding="10dp"
                />
        </FrameLayout>




    </LinearLayout>
    </LinearLayout>
        <EditText
            android:id="@+id/textframe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@drawable/select_bg"
            android:cursorVisible="false"
            android:hint="  أضغط لأضافه نص "
            android:padding="6dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="15sp"


            />

    </FrameLayout>
</LinearLayout>