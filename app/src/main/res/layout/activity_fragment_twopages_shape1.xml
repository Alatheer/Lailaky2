<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    tools:context=".Fragments.Fragment_twopages_shape1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="3"

        >

        <FrameLayout
            android:id="@+id/f1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:padding="2dp"

            >

            <net.karthikraj.shapesimage.ShapesImage
                android:id="@+id/shape1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="matrix"
                android:src="@color/colorPrimary"

                />

            <ImageView
                android:id="@+id/shape1_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/gallery" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/f2"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1.5"
            android:padding="2dp"

            >

            <net.karthikraj.shapesimage.ShapesImage
                android:id="@+id/shape2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="matrix"
                android:src="@color/colorPrimary"


                />

            <ImageView
                android:id="@+id/shape2_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/gallery"

                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/f3"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:padding="2dp"


            >

            <net.karthikraj.shapesimage.ShapesImage
                android:id="@+id/shape3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:scaleType="matrix"
                android:src="@color/colorPrimary"

                />

            <ImageView
                android:id="@+id/shape3_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/gallery"

                />


        </FrameLayout>


    </LinearLayout>

    <EditText
        android:id="@+id/textframe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:background="@drawable/select_bg"
        android:cursorVisible="false"
        android:hint="  أضغط لأضافه نص "
        android:padding="6dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="15sp"



        />
</FrameLayout>