<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp"

    >

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal"


        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:padding="5dp"

        >
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginRight="2dp">
    <FrameLayout
        android:id="@+id/f1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="2dp"
        android:padding="3dp"

        >
        <net.karthikraj.shapesimage.ShapesImage
            android:id="@+id/shape1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/colorPrimary"
            android:scaleType="matrix"
            />
        <ImageView
            android:id="@+id/shape1_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:src="@drawable/gallery"
            />
    </FrameLayout>
   <FrameLayout
       android:id="@+id/f2"

       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="2"
       android:padding="3dp"

       >
       <net.karthikraj.shapesimage.ShapesImage
           android:id="@+id/shape2"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:scaleType="matrix"
           android:src="@color/colorPrimary"
           />
       <ImageView
           android:id="@+id/shape2_icon"
           android:layout_width="56dp"
           android:layout_height="56dp"
           android:layout_gravity="center"
           android:src="@drawable/gallery"
           />
   </FrameLayout>


</LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/f3"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginBottom="2dp"
            android:padding="3dp"


            >
            <net.karthikraj.shapesimage.ShapesImage
                android:id="@+id/shape3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorPrimary"
                android:scaleType="matrix"

                />
            <ImageView
                android:id="@+id/shape3_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/gallery"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/f4"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="3dp"

            >
            <net.karthikraj.shapesimage.ShapesImage
                android:id="@+id/shape4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorPrimary"
                android:scaleType="matrix"

                />
            <ImageView
                android:id="@+id/shape4_icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/gallery"
                />
        </FrameLayout>



    </LinearLayout>


</LinearLayout>

        <EditText
            android:id="@+id/textframe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@drawable/select_bg"
            android:cursorVisible="false"
            android:hint="  أضغط لأضافه نص "
            android:padding="6dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="15sp"


            />
    </FrameLayout>

</LinearLayout>