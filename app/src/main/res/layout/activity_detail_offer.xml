<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    >
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context="com.farida.fareda.gazy3aqlk.Activitiess.Details">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="عنوان الالبوم"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            />



        <ImageView
            android:id="@+id/detail_img"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginLeft="10dp"
                android:drawableStart="@drawable/icon1"
                android:drawablePadding="5dp"
                android:textSize="14sp"
                android:text="@string/details"

                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/et_update_profile"
                android:layout_marginTop="5dp"

                />


        <TextView
            android:id="@+id/detail_desc"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"

            android:textColor="@color/colorPrimary"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            />








        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/icon2"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:text="@string/price"

                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/et_update_profile"
                    android:layout_marginTop="5dp"

                    />
                <TextView
                    android:id="@+id/detail_pric"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:text="sdjkdjskdd"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"



                    />






            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/picture"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:text="@string/album_size"

                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/et_update_profile"
                    android:layout_marginTop="5dp"

                    />

                <TextView
                    android:id="@+id/account_img"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"



                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="10dp"

                    />



            </LinearLayout>

        </LinearLayout>

            <Button
                android:id="@+id/Upload"
                android:text="@string/uploadImge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/collect2"


                />


</LinearLayout>




        <!--<Button
            android:id="@+id/detail_book"
            android:text="@string/book"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/collect2"/>-->

       <!-- <Button
            android:id="@+id/display_image"
            android:text="View Images"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/collect2"
            android:layout_marginTop="5dp"
            />-->

    </LinearLayout>
</ScrollView>
